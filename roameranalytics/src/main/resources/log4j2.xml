<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="warn" name="MyApp" packages="com.mobileum">
<Property name="log-path" >${}</Property>
  <Appenders>

     <RollingFile name="RollingFile" fileName="/home/smruti/RAlogs/application.log" filePattern="/home/smruti/RAlogs/application-%d{MM-dd-yyyy}.log"

                 ignoreExceptions="false">

      <PatternLayout>
        <Pattern>%d %p %c{1.} %m%n</Pattern>
      </PatternLayout>
      <TimeBasedTriggeringPolicy />
    </RollingFile>
    
    <Async name="rollingFileAppender">
      <AppenderRef ref="RollingFile"/>
    </Async>
  </Appenders>
  <Loggers>
    <Root level="trace">
      <AppenderRef ref="rollingFileAppender"/>
    </Root>
  </Loggers>
</Configuration>
